<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

        <Grid>
            <ListBox Name="ExpensesListBox" Margin="10,10,10,50" />
            <Button Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Click="AddButton_Click"/>
            <Button Content="Обновить" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Click="RefreshButton_Click"/>
            <Button Content="Удалить" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Click="DeleteButton_Click"/>
        </Grid>
   

</Window>
